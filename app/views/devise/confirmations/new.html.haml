= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f|
  %h2 Resend Confirmation
  %p Enter your email address and we'll resend your confirmation instructions.
  = f.error_notification
  = f.full_error :confirmation_token
  .form-inputs
    = f.input :email, :required => true, :autofocus => true, :placeholder => "Email address", :label => false
  = f.button :submit, "Resend instructions", :class => "btn btn-large btn-primary"
  %P= render "devise/shared/links"

:css
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }
