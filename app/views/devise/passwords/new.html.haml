= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f|
  %h2 Forgot your password?
  %p No worries. It happens all the time. Just enter your email address and we'll send you a link to reset it.
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, :autofocus => true, :placeholder => "Email address", :label => false
    = f.button :submit, "Email me reset instructions", :class => "btn btn-large btn-primary"
  %p= render "devise/shared/links"

:css
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }