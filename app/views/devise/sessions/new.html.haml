= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
  %h2 Please sign in
  %p Welcome to Underpants. Before moving on, you'll need to login.
  .form-inputs
    = f.input :email, :required => false, :autofocus => true, :placeholder => "Email address", :label => false
    = f.input :password, :required => false, :placeholder => "Password", :label => false
    = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
  = f.button :submit, "Sign in", :class => "btn btn-large btn-primary"
  %p= render "devise/shared/links"

:css
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

